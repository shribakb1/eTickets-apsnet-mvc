@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Html.DisplayFor(modelItem => item.CinemaName)
                                    <a class="text-white float-end"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" alt="@item.CinemaName" width="100%"/>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                            <p class="card-text"><b>Cinema: </b>@Html.DisplayFor(modelItem => item.Cinema)</p>
                            <p class="card-text"><b>Category: </b>@Html.DisplayFor(modelItem => item.MovieCategory)</p>
                            <p class="card-text"><b>Start Date: </b>@Html.DisplayFor(modelItem => item.StartDate)</p>
                            <p class="card-text"><b>End Date: </b>@Html.DisplayFor(modelItem => item.EndDate)</p>
                            <p class="card-text">
                                <b>Status: </b>
                                @if (DateTime.Now >= item.StartDate && DateTime.Now <= item.EndDate)
                                {
                                    <span class="badge bg-success text-white">Available</span>
                                }
                                else if (DateTime.Now > item.EndDate)
                                {
                                    <span class="badge bg-danger text-whte">Expired</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">Upcoming</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text d-flex justify-content-between">
                                <a class="btn btn-outline-primary"><i class="bi bi-eye-fill"></i>Show Details</a>
                                <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i>Add to Cart (@Html.DisplayFor(modelItem => item.Price))</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>