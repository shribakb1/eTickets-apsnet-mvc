@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePicturURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                   <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePicturURL" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItme => item.FullName)
                        </td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Bio)</td>
                        <td class="align-middle">
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-primary d-flex align-items-center"><i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-outline-info d-flex align-items-center"><i class="bi bi-eye"></i>Details</a>
                                <a class="btn btn-danger text-white d-flex align-items-center"><i class="bi bi-trash"></i>Delete</a>
                            </div>
                        </td>
                   </tr>
                }
            </tbody>
        </table>
    </div>
</div>